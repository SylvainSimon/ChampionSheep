{% extends "base.html.twig" %}

{% block pageTitle %}Connexion{% endblock %}

{% block pageBody %}
    
    <div class="login-box">
        
        <div class="login-box-body">

            <form action="{{ urlPostLogin }}" method="POST">

                <input type="hidden" name="FORM_SUBMIT" />

                <div class="form-group">
                    <div class="input-group">
                        <input type="email" class="form-control" name="login" placeholder="E-mail">
                        <span class="input-group-addon"><i class="material-icons md-icon-local-post-office md-dark"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input type="password" class="form-control" name="password" placeholder="Mot de passe">
                        <span class="input-group-addon"><i class="material-icons md-icon-lock md-dark"></i></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">
                            Connexion
                        </button>
                    </div>
                </div>
            </form>

            <!--
            <a href="">Des probl√®mes de connexion ?</a><br>
            <a href="" class="text-center">S'inscrire sur {{ config("website.title") }}</a>
            -->

        </div>
    </div>

{% endblock %}